/* Swipe样式修改 */
.imageContainer .wx-swiper-dots.wx-swiper-dots-horizontal{
     margin-bottom: 2rpx;
}
.imageContainer .wx-swiper-dot{
    width:40rpx;
    display: inline-flex;
    height: 5rpx;
    margin-left: 5rpx;
    justify-content:space-between;
}
.imageContainer .wx-swiper-dot::before{
    content: '';
    flex-grow: 1; 
    background: rgba(211, 211, 211, 0.8);
    border-radius: 8rpx
}
.imageContainer .wx-swiper-dot-active::before{
    background:#fd6262;
}
