/* 搜索 */
.index_top {
  width: 100%;
  height: 70rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  padding: 0 50rpx;
  box-sizing: border-box;
}

.index_top .logo{
  height: 140rpx;
  width:800rpx;
  max-width: 100%;
  max-height: 100%;
}

.index_top .search_box {
  height: 100%;
  width:30%;
  position: relative;
}

.search_box .search_text {
  border-radius: 100rpx;
  padding-left: 15rpx;
  padding-right: 80rpx;
  margin-top: 15rpx;
}

.search_box .search_ico {
  position: absolute;
  right: 5rpx;
  top: 17rpx;
  font-size: 18px;
}


/* 轮播图 */
swiper {
  height: 350rpx;
  margin-bottom: 40rpx;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

/* 导航 */
.nav {
  height: 250rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 0 20rpx;
  box-sizing: border-box;
  margin-bottom: 40rpx;
}

.nav .van_item {
  width: 25%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.van_item .nav_ico {
  width: 60%;
  height: 50%;
}

.van_item .nav_text {
  color: #999;
  margin-top: 10rpx;
}

/* 电影分类列表 */
.move_class {
  width: 100%;
  height: 450rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  background: red;
}

.move_class .move_title {
  border-left: 5rpx solid rgb(90, 90, 199);
  padding-left: 10rpx;
  margin-bottom: 20rpx;
}

.move_list {
  width: 100%;
  white-space: nowrap;
  display: flex;
  flex-direction: row;
  height: 220rpx;
} 

.move_itme {
  height: 100%;
  width: 220rpx;
  display: inline-block;
  margin-right: 20rpx;
}

.move_itme:last-child {
  margin-right: 0;
}

.m_layout {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.move_itme .move_post {
  width: 220rpx;
  height: 160rpx;
  border-radius: 20rpx;
}






/* carousel/index.wxss */

.imageContainer{
 width: 100%;
 height: 500rpx;
}
.item{
 height: 500rpx;
}
.itemImg{
 position: absolute;
 width: 100%;
 height: 380rpx;
 border-radius: 15rpx;
 z-index: 5;
 opacity: 0.7;
 top: 13%;
}
.active{
 opacity: 1;
 z-index: 10;
 height: 430rpx;
 top: 7%;
 transition:all .2s ease-in 0s;
}
